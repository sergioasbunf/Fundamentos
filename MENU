
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
using namespace std ;
void main ()
{
	  int a,b,r,opcion;
	  cout<<"______________________MENU___________________________"<<endl;
	  cout<<"Ingrese los valores de a y b : "<<endl;
	  cin>>a>>b;
	  do{
		  cout<<"1. suma "<<endl;
		  cout<<"2. Resta "<<endl;
		  cout<<"3. Producto "<<endl;
		  cout<<"4. Division"<<endl;
		   cout<<"0. Salir "<<endl;
	      cin>>opcion;
		  switch (opcion){
		  case 1:r=a+b;break;
		  case 2:r=a-b;break;
		  case 3:r=a*b;break;
		  case 4:r=a/b;break;
		  case 0:cout<<"salir"<<endl;break;
		  default: cout<<"Opcion invalida"<<endl;break;
	  }
		  if(opcion!=0)
		  cout<<"el resultado es "<<r<<endl;
		  else
			  cout<<endl;
		  getch();
		  system("cls");
	  }while (opcion!=0);
	  getch();
}
